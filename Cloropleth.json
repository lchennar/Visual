{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 960,
  "height": 500,
  "autosize": "none",
  "data": [
    {
      "name": "losses",
      "url": "https://raw.githubusercontent.com/lchennar/Visual/master/losses2015_transformed.csv",
      "format": {"type": "csv", "parse": "auto"},
      "transform": [{
  "type": "aggregate",
  "fields": ["Amount"],
  "groupby": ["State_Code","State_Abv"],
  "ops": ["sum"],
  "as": ["Amount"]
}]
    },
    {
      "name": "states",
      "url": "https://raw.githubusercontent.com/lchennar/Visual/master/us-10m.json",
      "format": {"type": "topojson", "feature": "states"},
      "transform": [
        { "type": "lookup", "from": "losses", "key": "State_Code", "fields": ["id"], "values": ["State_Code","Amount","State_Abv"] },
        { "type": "filter", "expr": "datum.Amount != null" }
      ]
    }
  ],

  "projections": [
    {
      "name": "projection",
      "type": "albersUsa"
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "quantize",
      "domain": [0, 270000000],
      "range": {"scheme": "reds", "count": 50}
    }
  ],

  "legends": [
    {
      "fill": "color",
      "orient": "bottom-right",
      "title": "Amount"
    }
  ],

  "marks": [
    {
      "type": "shape",
      "from": {"data": "states"},
      "encode": {
        "enter": { "tooltip": {"signal": "'State:'+ datum.State_Abv +' Amount:' + format(datum.Amount,',d')"}},
        "update": { "fill": {"scale": "color", "field": "Amount"} },
        "hover": { "fill": {"value": "purple"} }
      },
      "transform": [
        { "type": "geoshape", "projection": "projection" }

      ]
    }
  ]
}